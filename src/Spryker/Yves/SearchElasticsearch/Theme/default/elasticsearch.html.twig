{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
        <span class="sf-toolbar-value">Elasticsearch</span>
    {% endset %}

    {% set text %}
        <div class="sf-toolbar-info-piece">
            <b>Calls</b>
            <span>{{ collector.calls|length }}</span>
        </div>
    {% endset %}

    {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { link: profiler_url, name: 'elasticsearch'}) }}
{% endblock %}

{% block menu %}
    <span class="label">
        <strong>Elasticsearch</strong>
        <span class="count">
            <span>{{ collector.calls|length }}</span>
        </span>
    </span>
{% endblock %}

{% block panel %}
    <h2>Elasticsearch Search Requests</h2>
    <table>
        <tr>
            <th>Destination</th>
            <th>Payload</th>
            <th>Result</th>
        </tr>

        {% for callData in collector.calls %}
            <tr>
                <td>{{ callData['destination'] }}</td>
                <td>{{ callData['payload'] }}</td>
                <td>{{ callData['result'] }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
